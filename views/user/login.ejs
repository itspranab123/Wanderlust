<% layout('/layouts/boilerplate') -%>
    <h1 class="offset-5"> Log In</h1>
    <div class="row mt-3">
        <div class="col-5 offset-3">
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div>
                    <label for="user" class="form-label"> Username: </label>
                    <input type="text" name="username" placeholder="username" id="user" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter The username.
                    </div>
                </div>

                <div>
                    <label for="password" class="form-label"> Password: </label>
                    <input type="password" name="password" placeholder="abcd123" id="password" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        Enter The password.
                    </div>
                </div>
                <button class="mt-3 btn btn-dark offset-5">Log in</button>
            </form>
        </div>
    </div>