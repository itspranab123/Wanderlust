<% layout('/layouts/boilerplate') -%>
    <h1 class="offset-5">Sign Up</h1>
    <div class="row mt-3">
        <div class="col-5 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div>
                    <label for="user" class="form-label"> Username: </label>
                    <input type="text" name="username" placeholder="username" id="user" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter The username.
                    </div>
                </div>

                <div class="">
                    <label for="email" class="form-label"> Email: </label>
                    <input type="text" name="email" placeholder="abcd123@email.com" id="email" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        Enter The email.
                    </div>
                </div>

                <div>
                    <label for="password" class="form-label"> Password: </label>
                    <input type="password" name="password" placeholder="abcd123" id="password" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        Enter The password.
                    </div>
                </div>
                <button class="mt-3 btn btn-dark offset-5">SignUp</button>
            </form>
        </div>
    </div>